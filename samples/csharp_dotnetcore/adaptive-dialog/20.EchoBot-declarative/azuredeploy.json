{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "botId": {
            "type": "string"
        },
        "sku": {
            "type": "string",
            "defaultValue": "S1",
            "allowedValues": [
                "F0",
                "S1"
            ]
        },
        "msAppId": {
            "type": "string"
        },
        "msAppPassword": {
            "type": "string"
        },
        "displayName": {
            "type": "string",
            "defaultValue": ""
        },
        "existingServerFarmId": {
            "type": "string",
            "defaultValue": ""
        },
        "existingServerFarmLocation": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "isNewServerFarm": "[empty(parameters('existingServerFarmId'))]",
        "location": "[if(variables('isNewServerFarm'), resourceGroup().location, parameters('existingServerFarmLocation'))]",
        "uniqueSuffix": "[toLower(substring(uniqueString(resourceGroup().id, 'Microsoft.BotService/bots', parameters('botId')), 0, 6))]",
        "botDisplayName": "[if(empty(parameters('displayName')), parameters('botId'), parameters('displayName'))]",
        "botAppName": "[toLower(concat(parameters('botId'), '-', variables('uniqueSuffix')))]",
        "botAppResId": "[resourceId('Microsoft.Web/sites', variables('botAppName'))]",
        "newServerFarmName": "[toLower(concat(parameters('botId'), '-farm-', variables('uniqueSuffix')))]",
        "serverFarmId": "[if(variables('isNewServerFarm'), concat(resourceGroup().id, '/providers/Microsoft.Web/serverFarms/', variables('newServerFarmName')), parameters('existingServerFarmId'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('newServerFarmName')]",
            "location": "[variables('location')]",
            "condition": "[variables('isNewServerFarm')]",
            "sku": {
                "name": "P1v2",
                "tier": "PremiumV2"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "kind": "app",
            "name": "[variables('botAppName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[variables('newServerFarmName')]"
            ],
            "properties": {
                "serverFarmId": "[variables('serverFarmId')]",
                "siteConfig": {
                    "appSettings":[
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "https://scratchwebdeploy515.blob.core.windows.net/webdeploy/echobot.zip?sp=r&st=2020-05-18T04:43:41Z&se=2020-09-26T12:43:41Z&spr=https&sv=2019-10-10&sr=b&sig=7qSJKDd%2BbxyxZkMtgty8hJ%2Btgft5bOop5vTDKszR5c4%3D"
                        },
                        {
                            "name": "MicrosoftAppId",
                            "value": "[parameters('msAppId')]"
                        },
                        {
                            "name": "MicrosoftAppPassword",
                            "value": "[parameters('msAppPassword')]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Web/sites/slots",
            "name": "[concat(variables('botAppName'),'/staging')]",
            "location": "[variables('location')]",
            "apiVersion": "2018-11-01",
            "dependsOn": [
                "[variables('botAppName')]"
            ],
            "properties": {
                "serverFarmId": "[variables('serverFarmId')]",
                "siteConfig": {
                    "appSettings":[]
                }
            }
        },
        {
            "type": "Microsoft.BotService/botServices",
            "name": "[parameters('botId')]",
            "kind": "bot",
            "apiVersion": "2018-07-12",
            "location": "global",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "dependsOn": [
                "[variables('botAppName')]"
            ],
            "properties": {
                "displayName": "[variables('botDisplayName')]",
                "endpoint": "[concat('https://', reference(variables('botAppResId'), '2018-02-01', 'Full').properties.hostNames[0], '/api/messages')]",
                "msaAppId": "[parameters('msAppId')]"
            },
            "tags": {
                "hostedBy": "[resourceId('Microsoft.Web/sites', variables('botAppName'))]"
            }
        },
        {
            "type": "Microsoft.Web/sites/providers/links",
            "name": "[concat(variables('botAppName'), '/Microsoft.Resources/provisioned-for')]",
            "apiVersion": "2018-02-01",
            "location": "[variables('location')]",
            "properties": {
                "targetId": "[resourceId('Microsoft.BotService/bots', parameters('botId'))]",
                "sourceId": "[resourceId('Microsoft.Web/sites', variables('botAppName'))]"
            },
            "dependsOn": [
                "[variables('botAppName')]",
                "[parameters('botId')]"
            ]
        }
    ]
}
