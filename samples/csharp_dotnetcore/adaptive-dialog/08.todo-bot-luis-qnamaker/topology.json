{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sasUri": {
            "type": "string",
            "defaultValue": "https://vastorage3frvgi.blob.core.windows.net/emptyartifacts?sv=2019-02-02&st=2020-06-22T21%3A36%3A59Z&se=2020-06-23T21%3A36%3A59Z&sr=c&sp=rl&sig=Lmfii86Nx5IOKMKi3GTR2d5VHewagweyaRJX2fc1iBs%3D"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "uniqueSuffix": "[toLower(substring(uniqueString(resourceGroup().id, 'va-resources'), 0, 6))]",
        "rolloutIdentity": "[concat('va-rollout-id-', variables('uniqueSuffix'))]",
        "rolloutIdentityId": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('rolloutIdentity'))]",
        "rolloutRoleAssignment": "[concat('va-rollout-role-', variables('uniqueSuffix'))]",
        "topologyName": "empty-topology",
        "topologyId": "[resourceId('Microsoft.DeploymentManager/serviceTopologies', variables('topologyName'))]",
        "artifactName": "empty-artifact",
        "artifactSourceId": "[resourceId('Microsoft.DeploymentManager/artifactSources', variables('artifactName'))]",
        "stepName": "waitStep",
        "stepId": "[resourceId('Microsoft.DeploymentManager/steps', variables('stepName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.DeploymentManager/artifactSources",
            "apiVersion": "2018-09-01-preview",
            "name": "[variables('artifactName')]",
            "location": "[variables('location')]",
            "properties": {
              "sourceType": "AzureStorage",
              "artifactRoot": "empty-artifact",
              "authentication": {
                "type": "SAS",
                "properties": {
                  "sasUri": "[parameters('sasUri')]"
                }
              }
            }
        },
        {
            "type": "Microsoft.DeploymentManager/serviceTopologies",
            "apiVersion": "2018-09-01-preview",
            "name": "empty-topology",
            "location": "[variables('location')]",
            "dependsOn": [
              "[variables('artifactName')]"
            ],
            "properties": {
              "artifactSourceId": "[variables('artifactSourceId')]"
            },
            "resources": [
                {
                    "type": "services",
                    "apiVersion": "2018-09-01-preview",
                    "name": "empty-service",
                    "location": "[variables('location')]",
                    "dependsOn": [
                        "[variables('topologyName')]"
                    ],
                    "properties": {
                      "targetSubscriptionId": "[subscription().subscriptionId]",
                      "targetLocation": "[variables('location')]"
                    },
                    "resources": [
                        {
                            "type": "serviceUnits",
                            "apiVersion": "2018-09-01-preview",
                            "name": "empty-service-unit",
                            "location": "[variables('location')]",
                            "dependsOn": [
                              "empty-service"
                            ],
                            "properties": {
                              "targetResourceGroup": "[resourceGroup().name]",
                              "deploymentMode": "Incremental",
                              "artifacts": {
                                "templateArtifactSourceRelativePath": "empty-service-unit.json",
                                "parametersArtifactSourceRelativePath": "empty-service-unit-parameters.json"
                              }
                            }
                          }
                    ]
                  }
            ]
        }
    ],
    "outputs": {
      "artifactUrl": {
        "type": "string",
        "value": "[concat(parameters('sasUri'), reference(variables('artifactSourceId'), '2018-09-01-preview', 'Full').properties.artifactRoot)]"
      }
    }
}
